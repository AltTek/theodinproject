<%= title(@lesson.title) %>

<div class="container">
    <div class="row">
      <div class="col-lg-3 d-none d-lg-block d-xl-block lesson-navigation"></div>

      <div class="col-lg-8">
        <div class='lesson-header'>
          <%= render 'courses/course/banner', course: @course, show_completion_percent: false %>
          <h2 class="lesson-header__title accent"><%= @lesson.title %></h2>
        </div>

        <div class="lesson-content">
          <%= convert_markdown_to_html(@lesson.content) %>
        </div>
      </div>
    </div>
</div>

<div class="lesson-functions">
  <div class="container">
    <div class="card-main">
      <h1><%= @course.title %></h1>
      <h2 class="accent bold"><%= @lesson.title %></h2>
      <div class="lesson-button-group">
        <%= render 'lesson_buttons', lesson: @lesson %>
      </div>
      <%= render 'submissions' if @projects %>
    </div>

    <%= render 'shared/bottom_cta',
      button: gitter_button,
      heading: 'Got questions?',
      sub_heading: 'Chat with our friendly Odin community in our Gitter chatrooms!'
    %>
  </div>
</div>

<%= javascript_include_tag 'lessons.js' %>
